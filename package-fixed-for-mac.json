{
  "name": "corelink-desktop",
  "productName": "CoreLink",
  "private": true,
  "version": "1.0.0",
  "type": "commonjs",
  "main": "src/electron/main.js",
  "scripts": {
    "dev": "vite",
    "electron": "electron .",
    "start": "concurrently \"npm:dev\" \"npm:electron\"",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "dist:mac": "electron-builder --mac",
    "dist:mac:intel": "electron-builder --mac --x64",
    "dist:mac:arm": "electron-builder --mac --arm64",
    "dist:mac:universal": "electron-builder --mac --universal",
    "dist:win": "electron-builder --win --x64",
    "postinstall": "electron-builder install-app-deps && electron-rebuild",
    "rebuild": "electron-rebuild -f -w sqlite3",
    "clean": "rimraf dist dist-react node_modules package-lock.json"
  },
  "dependencies": {
    "@aws-sdk/client-textract": "^3.830.0",
    "axios": "^1.10.0",
    "chart.js": "^4.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "i18next": "^25.4.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "joi": "^17.13.3",
    "lottie-react": "^2.4.1",
    "lucide-react": "^0.511.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.1",
    "node-cache": "^5.1.2",
    "react": "^19.1.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^19.1.0",
    "react-i18next": "^15.7.2",
    "socket.io": "^4.8.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "electron": "^36.3.1",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "postcss": "^8.5.3",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.17",
    "vite": "^6.3.5"
  },
  "build": {
    "appId": "com.corelink.desktop",
    "productName": "CoreLink Desktop",
    "copyright": "Copyright Â© 2024 CoreLink",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "dist-react/**/*",
      "src/electron/**/*",
      "!src/electron/product-images/**/*",
      "!src/electron/invoice-images/**/*",
      "package.json"
    ],
    "includeSubNodeModules": true,
    "nodeGypRebuild": true,
    "npmRebuild": true,
    "extraResources": [
      {
        "from": "./inventory.db",
        "to": "inventory.db",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "public.app-category.business",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "entitlements": null,
      "entitlementsInherit": null
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "asarUnpack": [
      "node_modules/sqlite3/**/*"
    ]
  }
}